BINARY SEARCH
class Solution {
public:
    bool searchMatrix(vector<vector<int>>& matrix, int target) {
        int rows = matrix.size();
        int cols = matrix[0].size();
        int n = rows*cols;
        int s = 0;
        int e = n-1;
        int m = 0;

        while(s<=e){
            m = (s+e)/2;
            int rowInd = m/cols; // learn this
            int colInd = m%cols; // learn this
            if(matrix[rowInd][colInd] == target){
                return true;
            }else if(matrix[rowInd][colInd] <= target){
                s = m+1;
            }else{
                e = m-1;
            }
        }
        return false;

        
    }
};
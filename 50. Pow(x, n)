class Solution {
public:
    double myPow(double x, int n) {
        // using recursion
        // base case
        long long N = n;
        if(N==0) return 1;
        if(N<0){
            x = 1/x;
            N = -N;
        }
        // recursion
        if(N%2 ==0){
            double half = myPow(x , N/2);
            return half*half;
        }else{
            double half = myPow(x , N/2);
            return x*half*half;

        }
    }
};